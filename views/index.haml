.row
  %h2.center-align
    Welcome to KanikulyGuru

.row
  .col.s12.center-align
    %img.valign{ src: "/images/holidays.jpg" }

.row
  .col.s8.offset-s2
    %form.col.s12{ method: 'post' }
      .row
        .input-field.col.s12
          %input{ placeholder: "Toggl API Token", type: "text", name: "token" }
      .row
        .input-field.col.s12
          %input.datepicker{ placeholder: "Date", type: "date", name: "date" }

      .row
        .col.s12.right-align
          %button.btn.waves-effect.waves-light{ type: "submit", name: "Submit" }
            Submit
            %i.material-icons
              send
