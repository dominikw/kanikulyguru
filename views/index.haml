.row
  %h2.center-align
    Welcome to KanikulyGuru

.row
  .col.s12.center-align
    %img.valign.responsive-img{ src: "/images/holidays.jpg" }

.row
  .col.s8.offset-s2
    %form.col.s12{ method: 'post' }
      .row
        .input-field.col.s12
          %i.material-icons.prefix
            account_circle
          %input#token{ type: "text", name: "token" }
          %label{ for: "token" }
            Toggl API Token

      .row
        .input-field.col.s12
          %i.material-icons.prefix
            schedule
          %input.datepicker#date{ type: "date", name: "date" }

      .row
        .col.s12.right-align
          %button.btn.waves-effect.waves-light{ type: "submit", name: "Submit" }
            Submit
            %i.material-icons
              send
